	"scripts": {
		"prisma": "prisma",
		"vite": "vite",
		"svelte-kit": "svelte-kit",
		"sync": "svelte-kit sync",
		"clean": "rm -rf node_modules/.vite .svelte-kit build",
		"dev": "vite dev --host",
		"start": "vite dev --host --open",
		"build": "vite build",
		"preview": "vite preview",
		"integration.test": "playwright test",
		"unit.test": "jest",
		"unit.test:watch": "npm run test -- --watchAll",
		"unit.test:coverage": "jest --coverage",
		"test": "npm run integration.test && npm run unit.test",
		"mongo": "cd mongo && docker compose up -d",
		"mongo.delete": "cd mongo && docker compose down",
		"docker.build": "docker build -t ghcr.io/quantu-app/quantu-app/quantu-app:latest .",
		"docker.push": "docker push ghcr.io/quantu-app/quantu-app/quantu-app:latest",
		"docker.run": "docker run --name quantu-app --rm -it -p 3000:3000 ghcr.io/quantu-app/quantu-app/quantu-app:latest",
		"docker.stop": "docker stop quantu-app",
		"helm.delete": "helm delete -n ui quantu-app",
		"helm.upgrade": "helm upgrade quantu-app helm/quantu-app -n ui --install --set image.hash=\"$(docker inspect --format='{{index .Id}}' ghcr.io/quantu-app/quantu-app/quantu-app:latest)\",env.JWT_SECRET_KEY=$JWT_SECRET_KEY,env.GOOGLE_OAUTH_CLIENT_ID=$GOOGLE_OAUTH_CLIENT_ID,env.GOOGLE_OAUTH_CLIENT_SECRET=$GOOGLE_OAUTH_CLIENT_SECRET,env.DATABASE_URL=$DATABASE_URL,env.S3_ACCESS_KEY=$S3_ACCESS_KEY,env.S3_SECRET_KEY=$S3_SECRET_KEY,env.S3_BUCKET=$S3_BUCKET,env.S3_REGION=$S3_REGION,mongodb.auth.passwords[0]=\"$DATABASE_PASSWORD\",mongodb.auth.usernames[0]=\"root\",mongodb.auth.databases[0]=\"quantu-app\",mongodb.auth.rootPassword=$DATABASE_PASSWORD,global.postgresql.auth.postgresPassword=$POSTGRES_ADMIN_PASSWORD,postgresql.auth.password=$POSTGRES_USER_PASSWORD,postgresql.auth.replicationPassword=$POSTGRES_USER_PASSWORD",
		"helm": "npm run docker.build && npm run docker.push && npm run helm.upgrade",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"format": "prettier --write --plugin-search-dir=. .",
		"secret": "node -e \"console.log(require('crypto').randomBytes(64).toString('base64'));\""
	},
	"devDependencies": {
		"@playwright/test": "^1.27.0",
		"@sveltejs/adapter-node": "1.0.0-next.96",
