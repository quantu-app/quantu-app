{
	"name": "quantu",
	"version": "0.1.0",
	"scripts": {
		"svelte-kit": "svelte-kit",
		"clean": "rm -r node_modules/.vite && rm -r .svelte-kit && rm -r build",
		"web": "svelte-kit dev --open",
		"web.build": "svelte-kit build",
		"lint": "prettier --check . && eslint --ignore-path .gitignore .",
		"format": "prettier --write .",
		"docker.build": "docker build -t docker.pkg.github.com/quantu-app/quantu-app/quantu-app-ui:latest .",
		"docker.push": "docker push docker.pkg.github.com/quantu-app/quantu-app/quantu-app-ui:latest",
		"docker.run": "docker run --name quantu --rm -it -p 3000:3000 docker.pkg.github.com/quantu-app/quantu-app/quantu-app-ui:latest",
		"helm.delete": "helm delete -n ui quantu",
		"helm": "helm upgrade quantu helm/quantu -n ui --install --set image.hash=$(docker inspect --format='\"{{index .Id}}\"' docker.pkg.github.com/quantu-app/quantu-app/quantu-app-ui:latest)",
		"deploy": "npm run docker.build && npm run docker.push && npm run helm"
	},
	"type": "module",
	"devDependencies": {
		"@sveltejs/adapter-node": "next",
		"@types/quill": "^2.0.6",
		"@typescript-eslint/eslint-plugin": "^4.24.0",
		"@typescript-eslint/parser": "^4.24.0",
		"bootstrap": "^5.0.1",
		"eslint": "^7.27.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.2.0",
		"prettier": "^2.3.0",
		"prettier-plugin-svelte": "^2.3.0",
		"sass": "^1.34.0",
		"svelte-preprocess": "^4.7.3",
		"tslib": "^2.2.0",
		"typescript": "^4.2.4",
		"vite": "^2.3.3"
	},
	"dependencies": {
		"@aicacia/debounce": "^0.1.9",
		"@tauri-apps/tauri-forage": "^1.0.0-beta.2",
		"@ts-stack/markdown": "^1.4.0",
		"automerge": "latest",
		"katex": "^0.13.11",
		"pascal-case": "^3.1.2",
		"quill": "^1.3.7",
		"quill-delta": "^4.2.2",
		"svelte": "^3.38.2",
		"@sveltejs/kit": "next"
	}
}
