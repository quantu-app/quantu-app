{
	"name": "@quantu/app",
	"version": "0.1.0",
	"description": "This is the main application repository for QuantU App.",
	"author": {
		"name": "Nathan Faucett",
		"email": "nathanfaucett@gmail.com"
	},
	"type": "module",
	"engines": {
		"node": "14"
	},
	"build": {
		"appId": "quantu.app",
		"files": [
			"package.json",
			"electron.cjs"
		],
		"directories": {
			"output": "electron-build"
		},
		"extraFiles": [
			{
				"from": "build",
				"to": "resources/app.asar.unpacked/build"
			}
		]
	},
	"main": "electron.cjs",
	"scripts": {
		"svelte-kit": "svelte-kit",
		"clean": "rm -rf node_modules/.vite && rm -rf .svelte-kit && rm -rf build && rm -rf electron-build",
		"web": "svelte-kit dev --host --open",
		"web.build": "svelte-kit build",
		"desktop": "electron electron.dev.cjs",
		"desktop.linux": "electron-builder -l",
		"desktop.mac": "npm run web.build && electron-builder -m --dir -c.compression=store -c.mac.identity=null",
		"desktop.windows": "npm run web.build && electron-builder -w",
		"docker.build": "docker build -t docker.pkg.github.com/quantu-app/app/quantu-app-ui:latest .",
		"docker.push": "docker push docker.pkg.github.com/quantu-app/app/quantu-app-ui:latest",
		"docker.run": "docker run --name quantu-app --rm -it -p 3000:3000 docker.pkg.github.com/quantu-app/app/quantu-app-ui:latest",
		"docker.stop": "docker stop quantu-app",
		"helm.delete": "helm delete -n ui quantu-app",
		"helm.upgrade": "helm upgrade quantu-app helm/quantu-app-ui -n ui --install --set image.hash=\"$(docker inspect --format='{{index .Id}}' docker.pkg.github.com/quantu-app/app/quantu-app-ui:latest)\"",
		"helm": "npm run docker.build && npm run docker.push && npm run helm.upgrade",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --write --plugin-search-dir=. .",
		"gen.api": "rm -rf src/lib/api/quantu-app-api && openapi --input http://localhost:4000/swagger.json --output src/lib/api/quantu-app-api"
	},
	"devDependencies": {
		"@sveltejs/adapter-node": "next",
		"@types/bootstrap": "^5.1.0",
		"@types/katex": "^0.11.1",
		"@types/phoenix": "^1.5.2",
		"@types/quill": "2.0.4",
		"@types/uuid": "^8.3.1",
		"@typescript-eslint/eslint-plugin": "^4.29.0",
		"@typescript-eslint/parser": "^4.29.0",
		"bootstrap": "^5.1.0",
		"electron": "^13.1.8",
		"electron-builder": "^22.11.7",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.2.0",
		"openapi-typescript-codegen": "^0.9.3",
		"prettier": "^2.3.2",
		"prettier-plugin-svelte": "^2.3.1",
		"sass": "^1.37.5",
		"svelte-check": "^2.2.4",
		"svelte-preprocess": "^4.7.4",
		"tslib": "^2.3.0",
		"typescript": "^4.3.5",
		"vite": "^2.4.4"
	},
	"dependencies": {
		"@aicacia/debounce": "^0.1.9",
		"@aicacia/string-fuzzy_equals": "^0.1.2",
		"@aicacia/quill-rich-editor": "aicacia/ts-quill-rich-editor#363c63f8b69fa286bef8c9cb1ea2d3b35fcf39de",
		"@sveltejs/kit": "next",
		"eventemitter3": "^4.0.7",
		"fast-equals": "^2.0.3",
		"find-open-port": "^2.0.3",
		"katex": "^0.13.13",
		"localforage": "^1.9.0",
		"phoenix": "^1.5.10",
		"quill": "2.0.0-dev.4",
		"quill-delta": "^4.2.2",
		"svelte": "^3.41.1",
		"uuid": "^8.3.2"
	}
}
