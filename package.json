{
	"name": "@quantu/app",
	"version": "0.1.0",
	"description": "This is the main application repository for QuantU App.",
	"author": {
		"name": "Nathan Faucett",
		"email": "nathanfaucett@gmail.com"
	},
	"type": "module",
	"engines": {
		"node": ">=15"
	},
	"scripts": {
		"prisma": "prisma",
		"svelte-kit": "svelte-kit",
		"clean": "rm -rf node_modules/.vite .svelte-kit build node_modules/.prisma",
		"start": "svelte-kit dev --host --open",
		"build": "svelte-kit build",
		"preview": "svelte-kit preview",
		"mongo": "cd mongo && docker-compose up -d",
		"mongo.delete": "cd mongo && docker-compose down",
		"docker.build": "docker build -t ghcr.io/quantu-app/quantu-app/quantu-app:latest .",
		"docker.push": "docker push ghcr.io/quantu-app/quantu-app/quantu-app:latest",
		"docker.run": "docker run --name quantu-app --rm -it -p 3000:3000 ghcr.io/quantu-app/quantu-app/quantu-app:latest",
		"docker.stop": "docker stop quantu-app",
		"helm.delete": "helm delete -n ui quantu-app",
		"helm.upgrade": "helm upgrade quantu-app helm/quantu-app -n ui --install --set image.hash=\"$(docker inspect --format='{{index .Id}}' ghcr.io/quantu-app/quantu-app/quantu-app:latest)\" --set env.JWT_SECRET_KEY=$JWT_SECRET_KEY --set env.GOOGLE_OAUTH_CLIENT_ID=$GOOGLE_OAUTH_CLIENT_ID --set env.GOOGLE_OAUTH_CLIENT_SECRET=$GOOGLE_OAUTH_CLIENT_SECRET --set env.DATABASE_URL=$DATABASE_URL",
		"helm": "npm run docker.build && npm run docker.push && npm run helm.upgrade",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"format": "prettier --write --plugin-search-dir=. .",
		"secret": "node -e \"console.log(require('crypto').randomBytes(64).toString('base64'));\""
	},
	"devDependencies": {
		"@sveltejs/adapter-node": "next",
		"@types/bootstrap": "^5.1.9",
		"@types/cookie": "^0.4.1",
		"@types/js-cookie": "^3.0.1",
		"@types/jsonwebtoken": "^8.5.8",
		"@types/katex": "^0.11.1",
		"@types/quill": "2.0.9",
		"@types/uuid": "^8.3.4",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"bootstrap": "^5.1.3",
		"eslint": "^8.9.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^3.4.1",
		"katex": "^0.15.2",
		"prettier": "^2.5.1",
		"prettier-plugin-svelte": "^2.6.0",
		"prisma": "^3.10.0",
		"quill-delta": "^4.2.2",
		"sass": "^1.49.9",
		"svelte-check": "^2.4.5",
		"svelte-preprocess": "^4.10.4",
		"tslib": "^2.3.1",
		"typescript": "^4.5.5",
		"vite": "^2.8.4"
	},
	"dependencies": {
		"@aicacia/debounce": "^0.1.13",
		"@aicacia/rand": "^0.2.9",
		"@aicacia/range": "^0.1.1",
		"@aicacia/string-fuzzy_equals": "^0.1.4",
		"@prisma/client": "^3.10.0",
		"@sveltejs/kit": "next",
		"cookie": "^0.4.2",
		"eventemitter3": "^4.0.7",
		"js-cookie": "^3.0.1",
		"jsonwebtoken": "^8.5.1",
		"long-press-event": "^2.4.4",
		"quill": "2.0.0-dev.4",
		"svelte": "^3.46.4",
		"title-case": "^3.0.3",
		"uuid": "^8.3.2"
	}
}
