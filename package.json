{
	"name": "books",
	"version": "0.1.0",
	"scripts": {
		"svelte-kit": "svelte-kit",
		"tauri": "tauri",
		"clean": "rm -r node_modules/.vite && rm -r .svelte-kit && rm -r build",
		"web": "svelte-kit dev --open",
		"web.build": "svelte-kit build",
		"desktop": "tauri dev",
		"desktop.build": "tauri build",
		"lint": "prettier --check . && eslint --ignore-path .gitignore .",
		"format": "prettier --write .",
		"docker.build": "docker build -t docker.pkg.github.com/aicacia/ts-books/ui:latest .",
		"docker.push": "docker push docker.pkg.github.com/aicacia/ts-books/ui:latest",
		"docker.run": "docker run --name aicacia-books --rm -it -p 3000:3000 docker.pkg.github.com/aicacia/ts-books/ui:latest",
		"helm.delete": "helm delete -n ui aicacia-books",
		"helm": "helm upgrade aicacia-books helm/aicacia-books -n ui --install --set image.hash=$(docker inspect --format='\"{{index .Id}}\"' docker.pkg.github.com/aicacia/ts-books/ui:latest)"
	},
	"type": "module",
	"devDependencies": {
		"@aicacia/debounce": "^0.1.9",
		"@aicacia/markdown": "aicacia/ts-markdown",
		"@aicacia/peer": "aicacia/ts-peer",
		"@sveltejs/adapter-node": "next",
		"@sveltejs/kit": "next",
		"@tauri-apps/tauri-forage": "*",
		"@types/js-cookie": "^2.2.6",
		"@types/quill": "^2.0.6",
		"@typescript-eslint/eslint-plugin": "^4.22.1",
		"@typescript-eslint/parser": "^4.22.1",
		"automerge": "^0.14.2",
		"bootstrap": "^5.0.0-beta3",
		"eslint": "^7.24.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.2.0",
		"js-cookie": "^2.2.1",
		"katex": "^0.13.9",
		"peerjs": "^1.3.2",
		"prettier": "~2.2.1",
		"prettier-plugin-svelte": "^2.2.0",
		"quill": "^1.3.7",
		"quill-delta": "^4.2.2",
		"sass": "^1.32.12",
		"svelte": "^3.38.2",
		"svelte-preprocess": "^4.7.3",
		"tauri": "^0.14.1",
		"tslib": "^2.2.0",
		"typescript": "^4.2.4",
		"vite": "^2.2.4"
	}
}
