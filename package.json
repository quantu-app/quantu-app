{
	"name": "@quantu/app",
	"version": "0.1.0",
	"description": "This is the main application repository for QuantU App.",
	"author": {
		"name": "Nathan Faucett",
		"email": "nathanfaucett@gmail.com"
	},
	"type": "module",
	"engines": {
		"node": ">=15"
	},
	"main": "build/server.js",
	"bin": "build/server.js",
	"pkg": {
		"assets": [
			"build/assets/**/*"
		]
	},
	"scripts": {
		"tauri": "tauri",
		"svelte-kit": "svelte-kit",
		"clean": "rm -rf node_modules/.vite .svelte-kit build",
		"web": "svelte-kit dev --host --open",
		"web.build": "svelte-kit build",
		"web.preview": "svelte-kit preview",
		"desktop": "tauri dev",
		"desktop.prebuild": "node scripts/prebuild.cjs",
		"desktop.binary": "node scripts/build.cjs",
		"desktop.build": "tauri build",
		"docker.build": "docker build -t docker.pkg.github.com/quantu-app/app/quantu-app-ui:latest .",
		"docker.push": "docker push docker.pkg.github.com/quantu-app/app/quantu-app-ui:latest",
		"docker.run": "docker run --name quantu-app --rm -it -p 3000:3000 docker.pkg.github.com/quantu-app/app/quantu-app-ui:latest",
		"docker.stop": "docker stop quantu-app",
		"helm.delete": "helm delete -n ui quantu-app",
		"helm.upgrade": "helm upgrade quantu-app helm/quantu-app-ui -n ui --install --set image.hash=\"$(docker inspect --format='{{index .Id}}' docker.pkg.github.com/quantu-app/app/quantu-app-ui:latest)\"",
		"helm": "npm run docker.build && npm run docker.push && npm run helm.upgrade",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"format": "prettier --write --plugin-search-dir=. .",
		"gen.api": "rm -rf src/lib/api/quantu-app-api && openapi --input http://localhost:4000/swagger.json --output src/lib/api/quantu-app-api"
	},
	"devDependencies": {
		"@sveltejs/adapter-node": "1.0.0-next.59",
		"@tauri-apps/api": "^1.0.0-beta.8",
		"@tauri-apps/cli": "^1.0.0-beta.10",
		"@types/bootstrap": "^5.1.9",
		"@types/cookie": "^0.4.1",
		"@types/js-cookie": "^3.0.1",
		"@types/katex": "^0.11.1",
		"@types/quill": "2.0.9",
		"@types/simple-peer": "^9.11.4",
		"@types/uuid": "^8.3.4",
		"@typescript-eslint/eslint-plugin": "^5.10.0",
		"@typescript-eslint/parser": "^5.10.0",
		"bootstrap": "^5.1.3",
		"eslint": "^8.7.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.4.0",
		"katex": "^0.15.2",
		"openapi-typescript-codegen": "^0.13.0",
		"pkg": "^5.5.2",
		"prettier": "^2.5.1",
		"prettier-plugin-svelte": "^2.6.0",
		"quill-delta": "^4.2.2",
		"rollup": "^2.66.0",
		"rollup-plugin-node-builtins": "^2.1.2",
		"rollup-plugin-terser": "^7.0.2",
		"sass": "^1.49.0",
		"svelte-check": "^2.3.0",
		"svelte-preprocess": "^4.10.2",
		"tslib": "^2.3.1",
		"typescript": "^4.5.5",
		"vite": "^2.7.13"
	},
	"dependencies": {
		"@aicacia/debounce": "^0.1.13",
		"@aicacia/graph": "github:aicacia/ts-graph#03cf8806d385e9196005f0c85f9485a5cc5a81ca",
		"@aicacia/mesh": "github:aicacia/ts-mesh#0bb2ab394fd404e631f3a3db6d02a1088ff923c3",
		"@aicacia/rand": "^0.2.9",
		"@aicacia/range": "^0.1.1",
		"@aicacia/string-fuzzy_equals": "^0.1.4",
		"@sveltejs/kit": "1.0.0-next.215",
		"cookie": "^0.4.1",
		"eventemitter3": "^4.0.7",
		"js-cookie": "^3.0.1",
		"localforage": "^1.10.0",
		"long-press-event": "^2.4.4",
		"node-abort-controller": "^3.0.1",
		"quill": "2.0.0-dev.4",
		"svelte": "^3.46.2",
		"title-case": "^3.0.3",
		"uuid": "^8.3.2"
	}
}
