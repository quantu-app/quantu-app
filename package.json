{
	"name": "quantu",
	"version": "0.1.0",
	"description": "This is the main application repository for QuantU.",
	"scripts": {
		"svelte-kit": "svelte-kit",
		"clean": "rm -r node_modules/.vite && rm -r .svelte-kit && rm -r build",
		"web": "svelte-kit dev --open",
		"web.build": "svelte-kit build",
		"desktop": "electron ./src/electron.cjs",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --write --plugin-search-dir=. .",
		"docker.build": "docker build -t docker.pkg.github.com/quantu-app/quantu-app/quantu-app-ui:latest .",
		"docker.push": "docker push docker.pkg.github.com/quantu-app/quantu-app/quantu-app-ui:latest",
		"docker.run": "docker run --name quantu --rm -it -p 3000:3000 docker.pkg.github.com/quantu-app/quantu-app/quantu-app-ui:latest",
		"helm.delete": "helm delete -n ui quantu",
		"helm": "helm upgrade quantu helm/quantu -n ui --install --set image.hash=$(docker inspect --format='\"{{index .Id}}\"' docker.pkg.github.com/quantu-app/quantu-app/quantu-app-ui:latest)",
		"deploy": "npm run docker.build && npm run docker.push && npm run helm"
	},
	"type": "module",
	"main": "src/electron.cjs",
	"devDependencies": {
		"@sveltejs/adapter-node": "next",
		"@types/cookie": "^0.4.0",
		"@types/quill": "^2.0.8",
		"@types/uuid": "^8.3.0",
		"@typescript-eslint/eslint-plugin": "^4.26.1",
		"@typescript-eslint/parser": "^4.26.1",
		"bootstrap": "^5.0.1",
		"electron": "^13.1.2",
		"eslint": "^7.28.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.2.0",
		"prettier": "^2.3.1",
		"prettier-plugin-svelte": "^2.3.0",
		"sass": "^1.34.1",
		"svelte-preprocess": "^4.7.3",
		"svelte-check": "^2.1.0",
		"tslib": "^2.2.0",
		"typescript": "^4.3.2",
		"vite": "^2.3.7"
	},
	"dependencies": {
		"@aicacia/debounce": "^0.1.9",
		"@aicacia/string-fuzzy_equals": "^0.1.0",
		"@sveltejs/kit": "next",
		"@tauri-apps/tauri-forage": "latest",
		"@ts-stack/markdown": "^1.4.0",
		"automerge": "latest",
		"cookie": "^0.4.1",
		"uuid": "^8.3.2",
		"eventemitter3": "^4.0.7",
		"katex": "^0.13.11",
		"pascal-case": "^3.1.2",
		"quill": "^1.3.7",
		"quill-delta": "^4.2.2",
		"svelte": "^3.38.2"
	}
}
