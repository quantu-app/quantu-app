{
	"name": "@quantu/app",
	"version": "0.1.0",
	"description": "This is the main application repository for QuantU App.",
	"author": {
		"name": "Nathan Faucett",
		"email": "nathanfaucett@gmail.com"
	},
	"type": "module",
	"engines": {
		"node": "14"
	},
	"bin": "build/index.js",
	"pkg": {
		"assets": "build/assets/**/*!(*.js|*.map|*.src)"
	},
	"scripts": {
		"tauri": "tauri",
		"svelte-kit": "svelte-kit",
		"clean": "rm -rf node_modules/.vite .svelte-kit build",
		"web": "svelte-kit dev --host --open",
		"web.build": "svelte-kit build",
		"desktop": "tauri dev",
		"desktop.build": "node scripts/pkg.cjs",
		"docker.build": "docker build -t docker.pkg.github.com/quantu-app/app/quantu-app-ui:latest .",
		"docker.push": "docker push docker.pkg.github.com/quantu-app/app/quantu-app-ui:latest",
		"docker.run": "docker run --name quantu-app --rm -it -p 3000:3000 docker.pkg.github.com/quantu-app/app/quantu-app-ui:latest",
		"docker.stop": "docker stop quantu-app",
		"helm.delete": "helm delete -n ui quantu-app",
		"helm.upgrade": "helm upgrade quantu-app helm/quantu-app-ui -n ui --install --set image.hash=\"$(docker inspect --format='{{index .Id}}' docker.pkg.github.com/quantu-app/app/quantu-app-ui:latest)\"",
		"helm": "npm run docker.build && npm run docker.push && npm run helm.upgrade",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"format": "prettier --write --plugin-search-dir=. .",
		"gen.api": "rm -rf src/lib/api/quantu-app-api && openapi --input http://localhost:4000/swagger.json --output src/lib/api/quantu-app-api"
	},
	"devDependencies": {
		"@sveltejs/adapter-node": "next",
		"@tauri-apps/api": "^1.0.0-beta.8",
		"@tauri-apps/cli": "^1.0.0-beta.10",
		"@types/bootstrap": "^5.1.4",
		"@types/cookie": "^0.4.1",
		"@types/js-cookie": "^2.2.7",
		"@types/katex": "^0.11.1",
		"@types/phoenix": "^1.5.2",
		"@types/uuid": "^8.3.1",
		"@typescript-eslint/eslint-plugin": "^4.30.0",
		"@typescript-eslint/parser": "^4.30.0",
		"bootstrap": "^5.1.0",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.2.0",
		"openapi-typescript-codegen": "^0.9.3",
		"pkg": "^5.3.1",
		"prettier": "^2.3.2",
		"prettier-plugin-svelte": "^2.4.0",
		"sass": "^1.39.0",
		"svelte-check": "^2.2.5",
		"svelte-preprocess": "^4.9.1",
		"tslib": "^2.3.1",
		"typescript": "^4.4.2",
		"vite": "^2.5.3"
	},
	"dependencies": {
		"@aicacia/debounce": "^0.1.12",
		"@aicacia/quill-rich-editor": "git+https://github.com/aicacia/ts-quill-rich-editor.git#ea404061be63488829e5b16afea5da4d3f3307c5",
		"@aicacia/rand": "^0.2.6",
		"@aicacia/string-fuzzy_equals": "^0.1.4",
		"@sveltejs/kit": "next",
		"cookie": "^0.4.1",
		"eventemitter3": "^4.0.7",
		"fast-equals": "^2.0.3",
		"js-cookie": "^3.0.1",
		"katex": "^0.13.18",
		"localforage": "^1.10.0",
		"phoenix": "^1.5.12",
		"quill-delta": "^4.2.2",
		"svelte": "^3.42.4",
		"title-case": "^3.0.3",
		"uuid": "^8.3.2"
	}
}
